CYGCONF_ARGS="--disable-visibility"

src_compile() {
	cd ${S}
	cygautoreconf

if [ ! ]; then
	G=misc
	inform "[Compile] ${G}"
	mkdir -p ${B}/${G}
	cd ${B}/${G}
	cygconf \
		--with-ruby RUBY_LIB=${RUBY_VENDORLIB} RUBY_LIB_ARCH=${RUBY_VENDORARCH} \
		--with-tcl TCLSH=${TCLSH} TCL_LIB=/usr/lib \
		--without-csharp CSC=${MCS} GACUTIL=${GACUTIL} SN="/usr/bin/sn" \
		--without-java JAVA_HOME= \
		--without-lua \
		--without-php --without-php7 PHP_EXTENSION_DIR=${PHP_EXTENSION_DIR} \
		--without-python \
		--without-python3 \
		;
	cygmake jnidir=/usr/lib
fi

	# Lua versions
	for v in ${LUA_VERSIONS//:/ }
	do
		G=lua${v}
		inform "[Compile] ${G}"
		mkdir -p ${B}/${G}
		cd ${B}/${G}
		LUA_EXEC=lua${v}
		which ${LUA_EXEC} > /dev/null || LUA_EXEC=lua
		LUA_V=$( ${LUA_EXEC} -v | sed -e 's/^[^ ]* *//;s/ .*$//;s/\([0-9][0-9]*\)\.\([0-9][0-9]*\).*/\1.\2/' )
		[ x"${v}" = x"${LUA_V}" ] || error "${LUA_EXEC}: ${LUA_V} != ${v}"
		LUA_INC=$(pkg-config --variable=INSTALL_INC lua-${v})
		LUA_LIB=$(pkg-config --variable=INSTALL_CMOD lua-${v})
		cygconf \
			--with-lua \
			  LUA=${LUA_EXEC} \
			  LUA_INC=${LUA_INC} \
			  LUA_LIB=${LUA_LIB} \
			--without-csharp \
			--without-java \
			--without-perl \
			--without-php --without-php7 \
			--without-python \
			--without-python3 \
			--without-ruby \
			--without-tcl \
			;
		cygmake
	done

	# Python 3 versions
	for v in ${PYTHON3_VERSIONS//:/ }
	do
		G=python${v}
		inform "[Compile] ${G}"
		mkdir -p ${B}/${G}
		cd ${B}/${G}
		cygconf \
			--with-python3 \
			  PYTHON3=/usr/bin/python${v} \
			  PYTHON3_LIB=/usr/lib/python${v}/site-packages \
			  PYTHONPATH=${B}/${G}/python3 \
			--without-csharp \
			--without-java \
			--without-lua \
			--without-perl \
			--without-php --without-php7 \
			--without-python \
			--without-ruby \
			--without-tcl \
			;
		cygmake \
			PYTHONPATH=${B}/${G}/python3 \
			SPHINX_BUILD=sphinx-build-${v} \
			;

	done

	if inherited java
	then
		cygjavadoc -d ${B}/java/javadoc -sourcepath ${S}/java -subpackages org/xapian
	fi
}

src_install() {
if [ ! ]; then
	G=misc
	cd ${B}/${G}
	inform "[Install] ${G}"
	cyginstall jnidir=/usr/lib phpincdir=/usr/share/pear
fi

	# Lua versions
	for v in ${LUA_VERSIONS//:/ }
	do
		G=lua${v}
		inform "[Install] ${G}"
		cd ${B}/${G}
		cyginstall
	done

	# Python 3 versions
	for v in ${PYTHON3_VERSIONS//:/ }
	do
		G=python${v}
		inform "[Install] ${G}"
		cd ${B}/${G}
		cyginstall
	done

	# .la files are removed by install-data-hooks
	find ${D} -name '*.dll.a' -delete

	if inherited java
	then
		dojar java/built/xapian_jni.jar
		newjavadoc java/javadoc xapian_jni
	fi

	if inherited php
	then
		php_postinst
	fi
}
